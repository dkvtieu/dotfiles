### --- Oh My Zsh --- ###
#
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME=""

export BAT_THEME='Dracula'

plugins=(
    # Official plugins
    git
    colored-man-pages
    # Unofficial plugins
    git-open
    zsh-syntax-highlighting
    zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

### --- Theming --- ###

# Pure prompt
# https://github.com/sindresorhus/pure
fpath+=$HOME/.zsh/pure
autoload -U promptinit; promptinit
prompt pure

### --- User configuration --- ###


# Disable marking untracked files under VCS as dirty
DISABLE_UNTRACKED_FILES_DIRTY="true"

# Loading user aliases
source $HOME/.aliases

[[ $TMUX != "" ]] && export TERM="screen-256color"

eval "$(fnm env --use-on-cd)"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh


# bit
export PATH="$PATH:/Users/dkvtieu/bin"

export PATH="$HOME/.local/bin:$PATH"
# bit end
export PATH="/Users/dkvtieu/Library/Python/3.9/bin:$PATH"

# fnm
FNM_PATH="/Users/d/Library/Application Support/fnm"
if [ -d "$FNM_PATH" ]; then
  export PATH="/Users/d/Library/Application Support/fnm:$PATH"
  eval "`fnm env`"
fi
